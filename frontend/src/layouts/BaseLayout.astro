---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';


const title = Astro.props.title ?? 'Portafolio';
---

<html lang="es" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Manrope desde Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-dvh text-[--fg]">
    <div class="min-h-dvh w-full relative deep-ocean-bg flex flex-col">
      <Header />

      <main class="relative z-10 container mx-auto p-6 flex-1">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>

