---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { featuredPosts, recentPosts } from "../../data/blogPosts";
---

<BaseLayout title="Blog">
  <main class="min-h-screen pb-16">
    <!-- Volver al home -->
    <div class="max-w-6xl mx-auto px-4 pt-6">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-sm text-white/60 hover:text-white/90 transition-colors"
      >
        <span aria-hidden="true">‚Üê</span>
        <span>Volver al inicio</span>
      </a>
    </div>

    <!-- Hero -->
    <section class="max-w-6xl mx-auto px-4 pt-6 md:pt-8 pb-6 md:pb-8">
      <h1 class="text-2xl md:text-3xl lg:text-4xl font-extrabold tracking-tight mb-3">
        <span class="bg-gradient-to-r from-sky-400 to-blue-500 bg-clip-text text-transparent">
          Blog
        </span>
      </h1>
      <p class="text-sm md:text-base text-white/70 max-w-2xl">
        Art√≠culos donde comparto lo que voy aprendiendo sobre desarrollo web,
        buenas pr√°cticas, rendimiento y herramientas modernas.
      </p>
    </section>

    <!-- Art√≠culos destacados -->
    <section class="max-w-6xl mx-auto px-4">
      <h2 class="text-base md:text-lg font-semibold text-white mb-4 md:mb-5">
        Art√≠culos destacados
      </h2>

      <div class="grid gap-6 md:gap-7 md:grid-cols-2">
        {featuredPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="group block rounded-3xl bg-black/40 border border-white/10 overflow-hidden
                   shadow-xl shadow-black/40 backdrop-blur-sm
                   transition-transform duration-200 hover:-translate-y-2 hover:shadow-sky-500/40"
          >
            <!-- Top gradient -->
            <div class="h-40 md:h-44 bg-gradient-to-br from-sky-500/60 via-blue-500/55 to-fuchsia-500/60 flex items-center justify-center">
              <span class="text-5xl drop-shadow-[0_0_18px_rgba(15,118,230,0.55)]">
                üßæ
              </span>
            </div>

            <!-- Body -->
            <div class="px-5 pt-4 pb-5 md:px-6 md:pb-6 flex flex-col gap-3">
              <div class="flex items-center justify-between text-[11px] md:text-xs text-white/70">
                <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-0.5 rounded-full bg-sky-500/15 border border-sky-500/40 text-sky-300 font-medium">
                    {post.category}
                  </span>
                </span>
                <span>{post.date}</span>
              </div>

              <h3 class="text-sm md:text-base lg:text-lg font-semibold text-white leading-snug">
                {post.title}
              </h3>

              <p class="text-xs md:text-sm text-white/75 leading-relaxed flex-1">
                {post.excerpt}
              </p>

              <div class="mt-2 flex items-center justify-between text-[11px] md:text-xs text-white/60">
                <span class="inline-flex items-center gap-1">
                  <span aria-hidden="true">‚è±</span>
                  <span>{post.readTime}</span>
                </span>

                <span class="inline-flex items-center gap-1 text-sky-300 group-hover:text-sky-200">
                  <span>Leer m√°s</span>
                  <span aria-hidden="true">‚ûú</span>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Art√≠culos recientes -->
    <section class="max-w-6xl mx-auto px-4 mt-10 md:mt-12">
      <h2 class="text-base md:text-lg font-semibold text-white mb-4 md:mb-5">
        Art√≠culos recientes
      </h2>

      <div class="grid gap-5 md:grid-cols-2">
        {recentPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="group block rounded-3xl bg-black/40 border border-white/10 overflow-hidden
                   shadow-lg shadow-black/40 backdrop-blur-sm
                   transition-transform duration-200 hover:-translate-y-1.5 hover:shadow-sky-500/30"
          >
            <div class="px-5 py-4 md:px-6 md:py-5 flex flex-col gap-3">
              <div class="flex items-center justify-between text-[11px] md:text-xs text-white/70">
                <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-0.5 rounded-full bg-slate-800/80 border border-white/15 text-white/80 font-medium">
                    {post.category}
                  </span>
                  <span class="hidden sm:inline">{post.date}</span>
                </span>
              </div>

              <h3 class="text-sm md:text-base font-semibold text-white leading-snug">
                {post.title}
              </h3>

              <p class="text-xs md:text-sm text-white/75 leading-relaxed flex-1">
                {post.excerpt}
              </p>

              <div class="mt-1 flex items-center justify-between text-[11px] md:text-xs text-white/60">
                <span class="inline-flex items-center gap-1">
                  <span aria-hidden="true">‚è±</span>
                  <span>{post.readTime}</span>
                </span>
                <span class="inline-flex items-center gap-1 text-sky-300 group-hover:text-sky-200">
                  <span>Leer m√°s</span>
                  <span aria-hidden="true">‚ûú</span>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>
